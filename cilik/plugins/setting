@bot.on_callback_query(filters.regex("xcbremovetextnotes|xcbremovemedianotes"))
async def xcb_remove_text_media_notes(client, callback_query):
    user_id = callback_query.from_user.id
    query = callback_query.data.split()
    button_edit = [
        [
            InlineKeyboardButton("ğŸ”™ Kembali", callback_data=f"haturkatakuncinotes {query[1]}"),
        ],          
        
    ]
    
    if query[0] == "xcbremovetextnotes":
        await rm_text_notes(user_id, query[1])
        text = f"ğŸš® **Sukses menghapus Text untuk kata kunci Notes** `{query[1]}`."
    elif query[0] == "xcbremovemedianotes":      
        await rm_media_notes(user_id, query[1])
        text = f"ğŸš® **Sukses menghapus Media untuk kata kunci Notes** `{query[1]}`."
        
    await callback_query.edit_message_text(text=text, reply_markup=InlineKeyboardMarkup(button_edit))




@bot.on_callback_query(filters.regex("cebeseetextmedianotes"))
async def see_notes(client, callback_query):
    await callback_query.message.delete()
    user_id = callback_query.from_user.id
    query = callback_query.data.split()
    ya = await client.send_message(user_id, "ğŸ‘€")
    db_text= await get_text_notes(user_id, query[1])
    db_media= await get_media_notes(user_id, query[1])
    await sleep(1)
    await ya.delete()
    if db_text and not db_media:
        await client.send_message(user_id, db_text)
    elif db_text and db_media:
        await client.send_cached_media(user_id, db_media, caption=db_text)
    elif db_media and not db_text:
        await client.send_cached_media(user_id, db_media)
    else:
        await callback_query.answer(f"ğŸ¤·â€â™‚ Tidak ada Text atau Media pada kata kunci Notes {query[1]}", show_alert=True)
    
    p_text = "âœ…" if db_text else "âŒ"
    p_media = "âœ…" if db_media else "âŒ"

    text = f"""
ğŸ”¤ Kata Kunci Notes: `{query[1]}`

ğŸ“„ Text {p_text}
ğŸ“¸ Media {p_media}

ğŸ‘‰ğŸ» Gunakan tombol di bawah untuk memilih apa yang ingin anda tambahkan
"""
    button_edit = [
        [
            InlineKeyboardButton("ğŸ“„ Text", callback_data=f"ncbaddtextnotes {query[1]}"),
            InlineKeyboardButton("ğŸ“¸ Media", callback_data=f"ncbaddmedianotes {query[1]}"),
          
        ],          
        [
            InlineKeyboardButton("ğŸ‘€ Lihat", callback_data=f"cebeseetextmedianotes {query[1]}"),          
        ],             
        [
            InlineKeyboardButton("ğŸ”™ Kembali", callback_data="cb_set_notes"),          
          
        ],          
        
    ]        
    await sleep(2)
    await client.send_message(user_id, text, reply_markup=InlineKeyboardMarkup(button_edit))
    
